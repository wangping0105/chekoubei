        <th>门店数量</th>
        <th>首字母</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <%@brands.each_with_index do |b, i|  %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= b.name %></td>
            <td><%= b.stores_count.to_i %></td>
            <td><%= b.pinyin[0].upcase %></td>
            <td>~~</td>
          </tr>
      <%end %>
      </tbody>
    </table>
    <%= paginate @brands %>
